<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kolibreath.timetableapp.TimeTable
        android:id="@+id/timetable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp" />

    <View
        android:id="@+id/shade_view"
        android:visibility="gone"
        android:background="@color/shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.kolibreath.timetableapp.WeekSelectView
        android:id="@+id/view_week_select"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:elevation="1dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/tool_layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:translationZ="1dp"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/tv_switch_view"
            android:text="视图切换"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_week_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="第15周"
            android:textSize="16sp" />

<!--        todo 增加选择周数的图标-->
        <ImageButton
            android:id="@+id/ib_week_select"
            android:layout_centerInParent="true"
            android:background="@color/black"
            android:layout_toRightOf="@+id/tv_week_select"
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <ImageButton
            android:id="@+id/ib_schedule"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@color/black"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_locate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>