<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomInAndOutStyle">
        <item name="android:windowEnterAnimation">@anim/in_bottom_dialog</item>
        <item name="android:windowExitAnimation" >@anim/out_bottom_dialog</item>
    </style>

    <style name="DatePickerBottomDialog" parent="android:Theme.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="DatePickerDialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_date_picker</item>
        <item name="android:windowExitAnimation">@anim/out_date_picker</item>
    </style>
</resources>
